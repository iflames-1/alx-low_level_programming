# Makefile for building the school executable

# Variables
CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

# Rules
all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Prevent make from considering these as files
.PHONY: all clean oclean fclean re

# Dependency on header file
$(OBJ): m.h
