# Makefile for building the school executable

# Variables
CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	-$(RM) $(NAME) *~

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Prevent make from considering these as files
.PHONY: all clean oclean fclean re

# Ensure m.h exists
$(OBJ): | m.h
	@true

# Check if m.h exists, if not, prevent compilation
$(shell [ -e m.h ] || (echo "m.h header file not found." && exit 1))
